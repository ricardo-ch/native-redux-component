{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "rules": {
    "semi": "off",
    "comma-dangle": "off",
    "arrow-body-style": "off",
    "max-len": [
      "error",
      200
    ],
    "no-bitwise": "off",
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ]
  }
}